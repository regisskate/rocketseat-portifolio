{% extends "layout.njk" %}

{% block head %}

<title>Portfolio - RÃ©gis Skate</title>

<link href="https://fonts.googleapis.com/icon?family=material+Icons"rel="stylesheel">

{% endblock %}

{% block content %}



        <div id="wrapper">
            <h1>Videos</h1>
        </div>

        <section class="cards">

            {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card__image-container {{ 'featured-wrapper' if item.featured }} ">
                    <img src="https://img.youtube.com/vi/{{item.id}}/0.jpg" alt="imagem de {{item.title}}">
                    {% if item.featured %}
                        <div class="featured">Featured</div>
                        {% endif %}
                </div>
                <div class="card__content">
                    <p>{{item.title}}</p>
                </div>
                <div class="card__info">
                    <p>{{item.duration}}</p>
                    <p class="card__prince">{{item.price}}</p>
                </div>
            </div>
            {%endfor%}


                
        </section>

        <div class="modal-overlay active">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>

                <div class="modal-content">
                    <!-- video aqui -->
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>
        </div>
        
        <script src="scripts.js"></script>

{% endblock %}

